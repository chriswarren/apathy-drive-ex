<%= render ApathyDrive.PageView, "nav.html", conn: @conn %>

<table class="admin-index">
  <thead>
    <tr>
      <th>Name</th>
      <th>Race</th>
      <th>Class</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for character <- @characters do %>
    <tr>
      <td><%= character.name %></td>
      <td><%= ApathyDrive.Character.race(character) %></td>
      <td><%= ApathyDrive.Character.class(character) %></td>

      <td class="text-right">
        <%= link "Play", to: game_path(@conn, :game, %{"character_id" => character.id}), method: :post, class: "button button-primary" %>
        <%= link "Delete", to: character_path(@conn, :delete, character), method: :delete, class: "button button-primary" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New character", to: character_path(@conn, :new), class: "button button-primary" %>

<script src="<%= static_path(@conn, "/js/app.js") %>"></script>
<script>require("web/static/js/nav")</script>

