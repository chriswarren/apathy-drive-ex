<%= form_for @changeset, @action, fn f -> %>

  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below:</p>
      <ul>
        <%= for {attr, message} <- f.errors do %>
          <li><%= humanize(attr) %> <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, "Name", class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :description, "Description", class: "control-label" %>
    <%= textarea f, :description, class: "u-full-width" %>
  </div>

  <div class="form-group">
    <%= label f, :strength, "Strength", class: "control-label" %>
    <%= text_input f, :strength, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :agility, "Agility", class: "control-label" %>
    <%= text_input f, :agility, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :will, "Will", class: "control-label" %>
    <%= text_input f, :will, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "button button-primary" %>
  </div>

<% end %>
